import generar_archivos as ga

def main():

    participantes = input("Ingrese la cantidad de participantes: ") #Error con espacios
    while not participantes.isnumeric():
        participantes = input("Error. Ingrese la cantidad de participantes (Recuerde que solo debe ingresar numeros enteros): ") #Error con espacios ARREGLAR

    ga.generar_palabras()

main()
